{
  "name": "order-app-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm --workspace order-app-mobile run dev",
    "dev:admin": "npm --workspace order-app-admin run dev",
    "build": "npm run build -w order-app-mobile && npm run build -w order-app-admin",
    "lint": "echo 'No linter configured yet'"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11"
  }
}
